{
    "scopeName": "source.prover",
    "patterns": [
        {
            "include": "#line_comment"
        },
        {
            "include": "#block_comment"
        }
    ],
    "repository": {
        "line_comment": {
            "patterns": [
                {
                    "begin": "--",
                    "end": "\\n",
                    "name": "comment.line"
                }
            ]
        },
        "block_comment": {
            "patterns": [
                {
                    "begin": "{-",
                    "end": "-}",
                    "name": "comment.block",
                    "patterns": [
                        {
                            "include": "$self"
                        }
                    ]
                }
            ]
        }
    }
}
