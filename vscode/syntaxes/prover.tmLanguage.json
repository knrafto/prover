{
    "scopeName": "source.prover",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "begin": "--",
                    "end": "\\n",
                    "name": "comment.line"
                },
                {
                    "begin": "{-",
                    "end": "-}",
                    "name": "comment.block"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "(?<![^(),\\s])define(?![^(),\\s])",
                    "name": "keyword.control"
                },
                {
                    "match": "(?<![^(),\\s])assume(?![^(),\\s])",
                    "name": "keyword.control"
                },
                {
                    "match": "(?<![^(),\\s])prove(?![^(),\\s])",
                    "name": "keyword.control"
                }
            ]
        }
    }
}
