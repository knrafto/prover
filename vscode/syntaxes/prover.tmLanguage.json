{
    "scopeName": "source.prover",
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "include": "#keywords"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "begin": "--",
                    "end": "\\n",
                    "name": "comment.line"
                },
                {
                    "begin": "{-",
                    "end": "-}",
                    "name": "comment.block"
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "match": "(?<![^(),\\s])(define|assume|prove)(?![^(),\\s])",
                    "name": "keyword.control"
                },
                {
                    "match": "(?<![^(),\\s])(Π|Σ|λ)(?![^(),\\s])",
                    "name": "keyword.other.binder"
                }
            ]
        }
    }
}
