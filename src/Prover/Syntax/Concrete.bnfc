entrypoints Expr;

comment "--";
comment "{-" "-}";

-- TODO: exclude \v (vertical tab)
position token Name (char - [" \t\r\n\f(),."])+;

Lam.    Expr  ::= "λ" Name "." Expr;
Arrow.  Expr  ::= Expr1 "→" Expr;
_.      Expr  ::= Expr1;
Times.  Expr1 ::= Expr2 "×" Expr2;
_.      Expr1 ::= Expr2;
Equal.  Expr2 ::= Expr3 "=" Expr3;
_.      Expr2 ::= Expr3;
App.    Expr3 ::= Expr3 Expr4;
_.      Expr3 ::= Expr4;
_.      Expr4 ::= "(" Expr ")";
Id.     Expr4 ::= Name;
